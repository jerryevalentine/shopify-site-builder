<!-- sections/featured-collections.liquid -->

<section class="featured-collections-section">
  <div class="page-width">
    <h2 class="section-heading">{{ section.settings.heading }}</h2>
    <div class="collections-grid">
      {% for block in section.blocks %}
        {% assign collection = collections[block.settings.collection] %}
        {% if collection != blank %}
          <div class="collection-card">
            <a href="{{ collection.url }}">
              {% if collection.image %}
                <img src="{{ collection.image | img_url: 'medium' }}" alt="{{ collection.title }}">
              {% else %}
                <div class="no-image">No image available</div>
              {% endif %}
              <h3>{{ collection.title }}</h3>
            </a>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

<style>
  .featured-collections-section {
    padding: 60px 20px;
    background-color: #f9f9f9;
  }

  .section-heading {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 40px;
  }

  .collections-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 30px;
  }

  .collection-card img {
    width: 100%;
    height: auto;
    border-radius: 8px;
  }

  .collection-card h3 {
    text-align: center;
    margin-top: 10px;
    font-size: 1.2rem;
  }

  .no-image {
    width: 100%;
    height: 200px;
    background-color: #ddd;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #666;
    border-radius: 8px;
    font-size: 0.9rem;
  }
</style>

{% schema %}
{
  "name": "Featured Collections",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Section Heading",
      "default": "Shop by Collection"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Featured Collections",
      "blocks": [
        {
          "type": "collection"
        },
        {
          "type": "collection"
        },
        {
          "type": "collection"
        }
      ]
    }
  ]
}
{% endschema %}
